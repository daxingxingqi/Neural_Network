   "source": [
    "import numpy as np\n",
    "#broadcast 是numpy的机制 list转换成numpy array 才有\n",
    "def cross_entropy(Y, P):\n",
    "    Y = np.float_(Y)\n",
    "    P = np.float_(P)\n",
    "    return -np.sum(Y * np.log(P) + (1 - Y) * np.log(1 - P))"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 12,
   "metadata": {},
   "outputs": [],
   "source": [
    "Y = [1 ,1, 0]\n",
    "P = [0.8 ,0.8, 0.1]\n",
    "out = cross_entropy(Y,P)"
   ]
  }
